@import 'bootstrap.min.css'
@import 'slider.css'

body
  margin: 50px 0px
  padding: 0px
  text-align: center
  background-color: #FFFFF0

.wrapper
  min-width: 500px
  margin: 0px auto
  text-align: left
  padding: 0 10%

h1
  text-align: center

h2
  text-decoration: underline
  font-size: 22px

h3
  font-size: 17px

.navigation
  border:1px solid #ccc
  border-width:1px 0
  list-style:none
  margin:0
  padding:0
  text-align:center
  li
    display:inline
  a
    display:inline-block
    padding:10px
  a:hover
    text-decoration: none

.contact
  .contact-info
    margin-top: 9px
    margin-bottom: 9px
    .name
      font-weight: bold
